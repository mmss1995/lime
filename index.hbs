{{!< default}}

<div class="carousel slide" data-ride="carousel" id="carousel">
        <div class="carousel-inner">
            {{#foreach posts}}
            <div class="carousel-item {{#if @first}} active{{/if}}">
                <div class="hero d-block w-100" style="background: linear-gradient(transparent, transparent, #f7f7f761, #f5f0de), url({{feature_image}});"></div>
            </div>
            {{/foreach}}
        </div>
    </div>
<div class="container text-center" id="main-content">
    <div id="recipe">
        <div class="title">
            <h1 class="text-uppercase">ultime ricette</h1>
        </div>
        <div class="row">
            {{#foreach posts}}
            <div class="col-md m-3 p-2">
                {{> post_card}}
            </div>
            {{/foreach}}
        </div>
    </div>
</div>

<!-- Pagination-->
<div class="container">
    {{pagination}}

</div>